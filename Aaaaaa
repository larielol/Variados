import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

public class LogAnalyzer2 {
    
    static class Result {
        int count200 = 0;
        int count500 = 0;
    }
    
    static class FileProcessor implements Runnable {
        private final String fileName;
        private final Result result;
        
        public FileProcessor(String fileName, Result result) {
            this.fileName = fileName;
            this.result = result;
        }
        
        @Override
        public void run() {
            System.out.println("Processando arquivo: " + fileName);
            processFile(fileName, result);
        }
        
        private void processFile(String fileName, Result result) {
            try (BufferedReader br = new BufferedReader(new FileReader(fileName))) {
                String line;
                while ((line = br.readLine()) != null) {
                    String[] parts = line.split(" ");
                    if (parts.length == 3) {
                        String code = parts[2];
                        if (code.equals("200")) {
                            result.count200++;
                        } else if (code.equals("500")) {
                            result.count500++;
                        }
                    }
                }
            } catch (IOException e) {
                System.err.println("Erro ao ler arquivo: " + fileName);
                e.printStackTrace();
            }
        }
    }

    public static void main(String[] args) {
        if (args.length == 0) {
            System.out.println("Uso: java LogAnalyzer2 <arquivos_de_log>");
            System.exit(1);
        }

        List<Thread> threads = new ArrayList<>();
        List<Result> results = new ArrayList<>();
        
        // Criar e iniciar threads para cada arquivo
        for (String fileName : args) {
            Result result = new Result();
            results.add(result);
            
            Thread thread = new Thread(new FileProcessor(fileName, result));
            threads.add(thread);
            thread.start();
        }
        
        // Aguardar todas as threads terminarem
        try {
            for (Thread thread : threads) {
                thread.join();
            }
        } catch (InterruptedException e) {
            e.printStackTrace();
        }
        
        // Consolidar resultados
        int total200 = 0;
        int total500 = 0;
        for (Result result : results) {
            total200 += result.count200;
            total500 += result.count500;
        }
        
        System.out.println("===== RESULTADO FINAL =====");
        System.out.println("Total 200: " + total200);
        System.out.println("Total 500: " + total500);
    }
}
