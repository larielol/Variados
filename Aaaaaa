package main

import (
    "fmt"
    "math/rand"
    "time"
)

func main() {
    rand.Seed(time.Now().UnixNano())
    ch := make(chan int)
    limite := 50
    
    // Produtor
    go func() {
        for {
            v := rand.Intn(100)
            ch <- v
            time.Sleep(10 * time.Millisecond) // Pequena pausa para simular assincronia
        }
    }()
    
    // Consumidor
    go func() {
        for v := range ch {
            if v > limite {
                fmt.Printf("Valor acima do limite: %d\n", v)
            }
        }
    }()
    
    // Executar por 2 segundos para demonstração
    time.Sleep(2 * time.Second)
